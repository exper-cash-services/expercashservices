{
  "name": "exper-cash-services",
  "version": "2.1.0",
  "description": "نظام إدارة العمليات المالية المتقدم - EXPER CASH SERVICES SARL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t exper-cash-services .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "logs": "pm2 logs",
    "restart": "pm2 restart all",
    "status": "pm2 status"
  },
  "keywords": [
    "financial-management",
    "cash-services",
    "banking",
    "operations",
    "money-transfer",
    "arabic",
    "french",
    "morocco"
  ],
  "author": {
    "name": "EXPER CASH SERVICES SARL",
    "email": "contact@expercash.ma",
    "url": "https://expercash.ma"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/expercash/financial-system.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "nodemailer": "^6.9.4",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.3.0",
    "compression": "^1.7.4",
    "express-slow-down": "^1.6.0",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "csurf": "^1.11.0",
    "express-brute": "^1.0.1",
    "express-brute-mongo": "1.0.1",
    "socket.io": "^4.7.2",
    "redis": "^4.6.7",
    "node-cron": "^3.0.2",
    "archiver": "^5.3.1",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "uploads/*",
      "public/*"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
